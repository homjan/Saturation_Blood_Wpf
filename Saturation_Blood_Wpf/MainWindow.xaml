                <ComboBoxItem>200</ComboBoxItem>
                <ComboBoxItem>300</ComboBoxItem>
                <ComboBoxItem>500</ComboBoxItem>

            </ComboBox>
            <ListBox x:Name="listBox" Height="396" Canvas.Left="1058" Canvas.Top="70" Width="198" ItemsSource="{Binding Saturation_Data}"/>
            <Label x:Name="label19" Content="{Binding Str}" Canvas.Left="613" Canvas.Top="422" Width="80"/>
            <TextBox x:Name="N_pass" Height="23" Canvas.Left="905" TextWrapping="Wrap" Text="{Binding N_SEE, UpdateSourceTrigger=PropertyChanged}" Canvas.Top="443" Width="120"/>
            <Label x:Name="label20" Content="Сатурация" Canvas.Left="1099" Canvas.Top="30" FontSize="18" FontWeight="Bold" FontFamily="Georgia"/>
           

        </Canvas>

    </Viewbox>
